{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üìù Publish Draft to Live",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "FILE=${input:draftPath}; BASENAME=$(basename \"$FILE\"); DATE=${BASENAME:0:10}; MONTH=$(date -d \"$DATE\" '+%B'); mv \"$FILE\" docs/entries/ && sed -i \"1i\\\\- [$(head -n1 \"docs/entries/$BASENAME\" | cut -c3-)] ($BASENAME) ($MONTH ${DATE:0:4})\\\\n\" docs/entries/index.md"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "üåê Serve Website",
            "type": "shell",
            "command": "source .venv/bin/activate && mkdocs serve",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "showReuseMessage": false
            }
        },
        {
            "label": "üì∏ Setup Photo Environment",
            "type": "shell",
            "command": "python -m venv .venv-photo && source .venv-photo/bin/activate && pip install -r environments/requirements.photo.txt",
            "problemMatcher": []
        },
        {
            "label": "üîÑ Process Photos",
            "type": "shell",
            "command": "source .venv-photo/bin/activate && python scripts/process_photos.py",
            "dependsOn": ["üì∏ Setup Photo Environment"],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true
            }
        }
    ],
    "inputs": [
        {
            "id": "draftPath",
            "type": "command",
            "command": "extension.commandvariable.file.pickFile",
            "args": {
                "include": "docs/_entries_drafts/essays/????-??-??_*_v??.md",
                "description": "Select draft to publish"
            }
        }
    ]
}